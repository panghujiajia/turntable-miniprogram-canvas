page{
    width:100%;
    height:100%;
}
.container{
    width:300px;
    height:300px;
    position:relative;
    margin:120px auto;
}

#myCanvas{
    border-radius:50%;
    width:300px;
    height:300px;
    position:absolute;
    top:0;
    left:0;
    -webkit-transform-origin:50% 50%;
        -ms-transform-origin:50% 50%;
            transform-origin:50% 50%;
}

#myCanvas canvas{
    height:300px;
}

.itemsWrap{
    position:absolute;
    width:300px;
    height:300px;
    top:0;
    left:0;
}
.itemsWrap cover-view{
    display:block;
    -webkit-transform-origin:50% 150px;
        -ms-transform-origin:50% 150px;
            transform-origin:50% 150px;
    text-align:center;
    font-size:24rpx;
    line-height:50px;
}

#choujiang{
    width:300px;
    height:300px;
    position:absolute;
    top:50%;
    margin-top:-150px;
    z-index:222;
}
#choujiang cover-image{
    position:absolute;
    left:0;
    top:0;
    right:0;
    bottom:0;
    margin:auto;
    width:250rpx;
    height:250rpx;
}